## Copy to .env and fill values, do NOT commit .env
# Standard SRV connection string from MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority

# Logical database name to use
MONGODB_DB=portfolio

# Optional: future API base URL for the React app
# VITE_API_BASE_URL=http://localhost:4000
