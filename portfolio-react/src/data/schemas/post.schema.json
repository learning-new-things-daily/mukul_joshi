{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Posts Array",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "title": {"type":"string"},
      "url": {"type":"string"},
      "summary": {"type":"string"},
      "date": {"type":"string"},
      "tags": {"type":"array","items":{"type":"string"}},
      "external": {"type":"boolean"}
    },
    "required": ["title","url","summary"]
  }
}
